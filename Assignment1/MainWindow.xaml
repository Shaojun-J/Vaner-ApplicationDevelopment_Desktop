<Window x:Class="Assignment1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF7FAB7D">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="MENU" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontFamily="Arial Black" FontSize="36" RenderTransformOrigin="0.506,-0.716" Width="137" Height="58"/>
        <Button x:Name="sales" Content="SALES" HorizontalAlignment="Center" Margin="0,79,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Cursor="Hand" Width="88" Height="40" Click="sales_Click"/>
        <Button x:Name="admin" Content="ADMIN" HorizontalAlignment="Center" Margin="0,168,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Cursor="Hand" Width="88" Background="#FFE24040" Height="40" Click="admin_Click"/>


    </Grid>
</Window>
